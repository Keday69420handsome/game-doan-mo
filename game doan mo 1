<body>
    <div id="game-container">
        <h2>üîç Tr·ªën T√¨m v·ªõi Bot</h2>
        <p>H√£y ƒëo√°n xem bot ƒëang tr·ªën ·ªü ƒë√¢u (<span id="range">1-100</span>)!</p>
        <input type="number" id="guess" min="1" max="100" placeholder="Nh·∫≠p s·ªë...">
        <button onclick="checkGuess()">ƒêo√°n</button>
        <button id="difficulty" onclick="increaseDifficulty()">TƒÉng ƒë·ªô kh√≥</button>
        <p id="message"></p>
    </div>
    <script>
        let maxRange = 100;
        let botLocation = Math.floor(Math.random() * maxRange) + 1;
        let attempts = 0;
        let gameOver = false;

        function checkGuess() {
            if (gameOver) return;

            let guessInput = document.getElementById("guess");
            let message = document.getElementById("message");
            let guess = parseInt(guessInput.value);
            attempts++;

            if (isNaN(guess) || guess < 1 || guess > maxRange) {
                message.innerHTML = `üö´ Vui l√≤ng nh·∫≠p s·ªë trong kho·∫£ng 1-${maxRange}!`;
                return;
            }

            if (guess < botLocation) {
                message.innerHTML = "üìà Bot ƒëang ·ªü v·ªã tr√≠ cao h∆°n!";
            } else if (guess > botLocation) {
                message.innerHTML = "üìâ Bot ƒëang ·ªü v·ªã tr√≠ th·∫•p h∆°n!";
            } else {
                message.innerHTML = `üéâ Ch√∫c m·ª´ng! B·∫°n ƒë√£ t√¨m th·∫•y bot sau ${attempts} l·∫ßn ƒëo√°n! Tr√≤ ch∆°i s·∫Ω t·ª± ƒë·ªông b·∫Øt ƒë·∫ßu l·∫°i...`;
                gameOver = true;
                setTimeout(resetGame, 3000);
                return;
            }

            guessInput.value = "";
        }

        function resetGame() {
            botLocation = Math.floor(Math.random() * maxRange) + 1;
            attempts = 0;
            gameOver = false;
            document.getElementById("message").innerHTML = "";
            document.getElementById("guess").value = "";
        }

        function increaseDifficulty() {
            maxRange = 10000;
            document.getElementById("range").innerText = "1-10000";
            document.getElementById("guess").max = 10000;
            resetGame();
        }
    </script>
